<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <!-- 过滤器 -->
  <filter>
  	<filter-name>EncodeFilter</filter-name>
  	<filter-class>com.jsu.filter.EncodeFilter</filter-class>
  </filter>
  <filter>
  	<filter-name>PageFilter</filter-name>
  	<display-name>PageFilter</display-name>
  	<description></description>
  	<filter-class>com.jsu.filter.PageFilter</filter-class>
  </filter>
  <filter>
  	<filter-name>LoginFilter</filter-name>
  	<display-name>LoginFilter</display-name>
  	<description></description>
  	<filter-class>com.jsu.filter.LoginFilter</filter-class>
  </filter>
  <filter>
  	<filter-name>AdminiFilter</filter-name>
  	<display-name>AdminiFilter</display-name>
  	<description></description>
  	<filter-class>com.jsu.filter.AdminiFilter</filter-class>
  </filter>
 
  <filter-mapping>
  	<filter-name>EncodeFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>PageFilter</filter-name>
  	<url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>LoginFilter</filter-name>
  	<url-pattern>/voted/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>AdminiFilter</filter-name>
  	<url-pattern>/admin/*</url-pattern>
  </filter-mapping>

  
  <!-- servlet -->
  <servlet>
  	<servlet-name>VotedServlet</servlet-name>
  	<servlet-class>com.jsu.servlet.VotedServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ImageServlet</servlet-name>
  	<servlet-class>com.jsu.servlet.ImageServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>VoteServlet</servlet-name>
  	<display-name>VoteServlet</display-name>
  	<description></description>
  	<servlet-class>com.jsu.servlet.VoteServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CheckServlet</servlet-name>
  	<display-name>CheckServlet</display-name>
  	<description></description>
  	<servlet-class>com.jsu.servlet.CheckServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>SignServlet</servlet-name>
  	<display-name>SignServlet</display-name>
  	<description></description>
  	<servlet-class>com.jsu.servlet.SignServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ManageServlet</servlet-name>
  	<display-name>ManageServlet</display-name>
  	<description></description>
  	<servlet-class>com.jsu.servlet.ManageServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>UserServlet</servlet-name>
  	<display-name>UserServlet</display-name>
  	<description></description>
  	<servlet-class>com.jsu.servlet.UserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>VotedServlet</servlet-name>
  	<url-pattern>/voted/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ImageServlet</servlet-name>
  	<url-pattern>/image/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>VoteServlet</servlet-name>
  	<url-pattern>/vote/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CheckServlet</servlet-name>
  	<url-pattern>/check/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>SignServlet</servlet-name>
  	<url-pattern>/sign/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ManageServlet</servlet-name>
  	<url-pattern>/admini/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>UserServlet</servlet-name>
  	<url-pattern>/user/*</url-pattern>
  </servlet-mapping>
</web-app>
